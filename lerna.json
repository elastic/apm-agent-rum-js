{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "registry": "https://registry.npmjs.org",
  "command": {
    "version": {
      "allowBranch": ["master", "4.x"],
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "gitRemote": "upstream"
    },
    "run": {
      "stream": true
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/test/**",
    "docs"
  ]
}
